{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2015"
    ],
    "skipLibCheck": true,
    "outDir": "./lib",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "declaration": true,
    "typeRoots": [
      "./node_modules/@types/"
    ]
  },
  "include": ["./src/*.ts"]
}
